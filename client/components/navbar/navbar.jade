div.row(ng-controller="NavbarCtrl")
  div#navbarSupp
    button.navbar-toggle(type="button", ng-click="isCollapsed = !isCollapsed")
      span.sr-only Toggle navigation
      span.icon-bar
      span.icon-bar
      span.icon-bar
      
  a#navbarLogo(href="/") Higherframe

  div#navbarNavigation(collapse="isCollapsed")
    ul#primaryNavigation.nav
      li(ng-repeat="item in menu", ng-class="{active: isActive(item.link)}")
        a(ng-href="{{item.link}}") {{item.title}}

      li(ng-show="isAdmin()", ng-class="{active: isActive('/admin')}")
        a(href="/admin") Admin

    ul#identityNavigation.nav
      li(ng-hide="isLoggedIn()", ng-class="{active: isActive('/signup')}")
        a(href="/signup") Sign up

      li(ng-hide="isLoggedIn()", ng-class="{active: isActive('/login')}")
        a(href="/login") Login

      li#identity(ng-show="isLoggedIn()")
        img.image(ng-if="getCurrentUser().provider == 'facebook'", ng-src="http://graph.facebook.com/{{ getCurrentUser().facebook.id }}/picture?type=large")
        span.text {{ getCurrentUser().name }}

      li(ng-show="isLoggedIn()", ng-class="{active: isActive('/settings')}")
        a(href="/settings") Settings

      li(ng-show="isLoggedIn()", ng-class="{active: isActive('/logout')}")
        a(href="", ng-click="logout()") Logout