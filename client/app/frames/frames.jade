// Header
#header.layout-partial(ng-controller="NavbarCtrl")
	div.header-navigation
		div.header-navigation-back.h6.medium

		div.header-navigation-title.h4

		div.header-navigation-right.h6.medium
			div#identity(ng-show="isLoggedIn()", uib-dropdown, dropdown-append-to-body="true")
				a.ui-dropdown-toggle(uib-dropdown-toggle)
					ui-placeholder(type="user", src="getCurrentUser().image")
					span {{ getCurrentUser().name }}
					span.font-awesome &#xf078;

				ul(uib-dropdown-menu)
					li
						a {{ getCurrentUser().name }}

					li.divider
							
					li(ng-class="{active: isActive('/settings')}")
						a(href="/settings") Settings

					li(ng-class="{active: isActive('/logout')}")
						a(href="", ng-click="logout()") Log out

	div.header-title
		h2 Hi, {{ getCurrentUser().name }}

	div.header-toolbar
		div.header-toolbar-link.header-toolbar-item.active
			a
				span.header-toolbar-item-label.h6.medium Wireframes

		div.header-toolbar-link.header-toolbar-item
			a
				span.header-toolbar-item-label.h6.medium Sharing

		div.header-toolbar-link.header-toolbar-item
			a
				span.header-toolbar-item-label.h6.medium Settings

div#frames.layout-partial
	div.group
		div.organisation.row
			div.name.b3.uppercase.airy My wireframes
			
		div.frames.cards.row
			a.card(ng-repeat="frame in FramesCtrl.personal | orderBy:'-created_at'", ng-click="FramesCtrl.onFrameClick($event, frame)")
				div.content
					div.left
						span.name.h4.block {{ frame.name }}
								
						ul.users
							li.user(ng-repeat="user in frame.users", uib-tooltip-html="'Shared with ' + user.name", tooltip-placement="bottom", tooltip-append-to-body="true", tooltip-popup-delay="800")
								ui-placeholder.avatar(type="user", src="user.image")
						
					div.right
						span.lastModified {{ (frame.created_at | moment).fromNow() }}
						
			a.card.new(ng-click="FramesCtrl.onNewFrameClick(group.organisation)")
				div.content
					span + add new
