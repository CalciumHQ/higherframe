div#navbar.row.transparent.green(ng-include='"components/navbar/navbar.html"')

#login.page.underlay-navbar
    div#social(ng-if="false")
      button.button(type="button", href="", ng-click="loginOauth('facebook')")
        i.fa.fa-facebook
        |  Facebook

      button.button(type="button", href="", ng-click="loginOauth('google')")
        i.fa.fa-google-plus
        |  Google+

form(name="form", ng-submit="login(form)", novalidate="").ui-modal
  .ui-modal-header
    h3 Log in to Higherframe
    
  .ui-modal-body
    div.form-group
      label(for="user") Email address:
      input.form-control(name="email", type="text", ng-model="user.email", placeholder="e.g.: don@sterlingcooper.com", required, tabindex="1")
      p.help-block Not a Higherframe user? 
        a(href="/signup", tabindex="3") Request access now
        
    div.form-group
      label(for="password") Password:
      input.form-control(name="password", type="password", ng-model="user.password", required, tabindex="2")
      p.help-block
        a(href="/forgot", tabindex="4") I forgot my password
        
    div.form-group
      p.help-block.text-danger(ng-show='form.email.$error.required && form.password.$error.required && submitted')
        | Please enter your email and password.
      p.help-block.text-danger {{ errors.other }}
    
  .ui-modal-footer
    .ui-modal-buttons
      button.btn.btn-default(type="button", ng-click="ModalCtrl.onCancelButtonClick()")
        span Cancel
        
      button.btn.btn-success(type="submit")
        span Login
